<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.emc.ocopea.microservice</groupId>
        <artifactId>microservice-parent</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>

    <artifactId>microservice-dev-deployment-stack</artifactId>
    <name>DEV Deployment Stack</name>

    <dependencies>

        <!-- MicroService Runtime library-->
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>microservice-runtime</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>microservice-configuration-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Using temp filesystem for blobstore -->
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>object-store-temp-filesystem-impl</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Web server is standalone webserver -->
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>microservice-undertow-webserver-impl</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!--  logging is logback, we need it to set logger levels on runtime  -->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.jboss.xnio</groupId>
            <artifactId>xnio-api</artifactId>
            <version>${jboss.nio.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.xnio</groupId>
            <artifactId>xnio-nio</artifactId>
            <version>${jboss.nio.version}</version>
            <scope>compile</scope>
        </dependency>

        <!-- Implementing messaging stats for devMode -->
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>microservice-messaging-stats</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Import definitions for ServiceLoader -->
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>dev-blob-store-provider</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>dev-data-source-provider</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>dev-messaging-provider</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>dev-web-server-provider</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>dev-scheduler-provider</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>logback-logging-provider</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- schema bootstrap - used to allow bootstrapping schema for dev mode -->
        <dependency>
            <groupId>com.emc.ocopea.microservice</groupId>
            <artifactId>microservice-schema-bootstrap</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

</project>

